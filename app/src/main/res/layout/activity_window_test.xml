<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/whiteParent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.herewhite.sdk.WhiteboardView
            android:id="@+id/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible" />
    </FrameLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/radio"
                style="@style/TestButton"
                android:text="setRadio" />

            <Button
                android:id="@+id/colorScheme"
                style="@style/TestButton"
                android:text="setPrefersColorScheme" />

            <Button
                android:id="@+id/insertPlayer"
                style="@style/TestButton"
                android:text="player" />

            <Button
                android:id="@+id/insertStatic"
                style="@style/TestButton"
                android:text="static" />

            <Button
                android:id="@+id/insertDynamic"
                style="@style/TestButton"
                android:text="dynamic" />

            <Button
                android:id="@+id/insertNewDynamic"
                style="@style/TestButton"
                android:text="newDynamic" />

            <Button
                android:id="@+id/closeApp"
                style="@style/TestButton"
                android:text="closeApp" />

            <Button
                android:id="@+id/lockRatio"
                style="@style/TestButton"
                android:text="lockRatio" />

            <Button
                android:id="@+id/disableOperation"
                style="@style/TestButton"
                android:text="disableOperation" />

            <Button
                android:id="@+id/saveAttributes"
                style="@style/TestButton"
                android:text="saveAttributes" />
        </LinearLayout>
    </HorizontalScrollView>
</FrameLayout>
